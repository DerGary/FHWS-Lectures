<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/eventLectureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventLectureLabel"
                android:text="@string/layout_addpage_lecturecaption"
                style="@style/LabelTextView"/>

            <TextView
                android:id="@+id/eventLectureText"
                android:text="@string/layout_addpage_taptoset"
                style="@style/ContentTextView"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventTypeLabel"
                android:text="@string/layout_addpage_typecaption"
                style="@style/LabelTextView" />

            <TextView
                android:id="@+id/eventTypeText"
                android:text="@string/layout_addpage_taptoset"
                style="@style/ContentTextView"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventDocentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventDocentLabel"
                android:text="@string/layout_addpage_docentcaption"
                style="@style/LabelTextView" />

            <LinearLayout
                android:id="@+id/eventDocentLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/eventDocentContent"
                    android:text="@string/layout_addpage_taptoset"
                    style="@style/ContentTextView" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/eventStartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventStartLabel"
                android:text="@string/layout_addpage_startcaption"
                style="@style/LabelTextView" />

            <TextView
                android:id="@+id/eventStartContent"
                android:text="@string/layout_addpage_taptoset"
                style="@style/ContentTextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventEndLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventEndLabel"
                android:text="@string/layout_addpage_endcaption"
                style="@style/LabelTextView" />

            <TextView
                android:id="@+id/eventEndContent"
                android:text="@string/layout_addpage_taptoset"
                style="@style/ContentTextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventRoomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rippleeffect"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/eventRoomLabel"
                android:text="@string/layout_addpage_roomcaption"
                style="@style/LabelTextView" />

            <TextView
                android:id="@+id/eventRoomText"
                android:text="@string/layout_addpage_taptoset"
                style="@style/ContentTextView"/>

        </LinearLayout>

        <Button
            android:id="@+id/eventSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:text="@string/layout_addpage_send"/>
    </LinearLayout>
</ScrollView>