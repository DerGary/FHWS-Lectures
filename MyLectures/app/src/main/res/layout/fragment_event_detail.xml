<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|top"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/eventLectureRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventLectureContent"
            style="@style/ClickableHeaderTextView" />

        <TextView
            android:id="@+id/eventTypeLabel"
            style="@style/LabelTextView"
            android:text="@string/layout_eventdetail_typecaption" />

        <TextView
            android:id="@+id/eventTypeContent"
            style="@style/ContentTextView" />

        <TextView
            android:id="@+id/eventDocentLabel"
            style="@style/LabelTextView"
            android:text="@string/layout_eventdetail_docentscaption" />

        <LinearLayout
            android:id="@+id/EventDocentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/eventStartLabel"
            android:text="@string/layout_eventdetail_startcaption"
            style="@style/LabelTextView"/>

        <TextView
            android:id="@+id/eventStartContent"
            style="@style/ContentTextView"/>

        <TextView
            android:id="@+id/eventEndLabel"
            android:text="@string/layout_eventdetail_endcaption"
            style="@style/LabelTextView" />

        <TextView
            android:id="@+id/eventEndContent"
            style="@style/ContentTextView" />

        <TextView
            android:id="@+id/eventPlaceLabel"
            android:text="@string/layout_eventdetail_roomcaption"
            style="@style/LabelTextView" />

        <TextView
            android:id="@+id/eventPlaceContent"
            style="@style/ContentTextView" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />
</LinearLayout>
