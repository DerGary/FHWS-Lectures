<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:background="@color/white"
        android:fillViewport="true"
        android:foregroundGravity="fill_horizontal|fill_vertical|fill">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="40dp"
                android:gravity="fill_horizontal|fill_vertical|fill"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lectureNameContent"
                        style="@style/HeaderTextView" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lecturePlaceLabel"
                    android:text="@string/layout_lecturedetail_placecaption"
                    style="@style/LabelTextView" />

                <TextView
                    android:id="@+id/lecturePlaceContent"
                    style="@style/ContentTextView" />

                <TextView
                    android:id="@+id/lectureDocentLabel"
                    android:text="@string/layout_lecturedetail_docentscaption"
                    style="@style/LabelTextView" />

                <LinearLayout
                    android:id="@+id/lectureDocentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/lectureNotesLabel"
                    android:text="@string/layout_lecturedetail_notescaption"
                    style="@style/LabelTextView" />

                <EditText
                    android:id="@+id/lectureNotesTextfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="40dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="@string/no_content_placeholder"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/lectureDescLabel"
                    android:text="@string/layout_lecturedetail_desccaption"
                    style="@style/LabelTextView" />

                <TextView
                    android:id="@+id/lectureDescTextfield"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="6dp"
                    android:textSize="14dp"
                    android:ems="10" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>