<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/material_deep_teal_200</item>
        <item name="colorPrimaryDark">@color/material_deep_teal_500</item>
        <!--<item name="android:colorAccent">@color/material_deep_teal</item>-->
        <!--<item name="colorAccent">@color/material_deep_teal_200</item>-->

        <!--<item name="android:navigationBarColor">@color/primaryDarkDef</item>-->
        <!--<item name="android:activatedBackgroundIndicator">@color/green</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="PagerTabStripText">
        <!--<item name="android:textSize">14sp</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_deep_teal_500</item>
    </style>
    <style name="HeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rippleeffect</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/no_content_placeholder</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="ClickableHeaderTextView" parent="HeaderTextView">
        <item name="android:textColor">@color/clickableColor</item>
    </style>

    <style name="ContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:text">@string/no_content_placeholder</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="ClickableContentTextView" parent="ContentTextView">
        <item name="android:textColor">@color/clickableColor</item>
    </style>

    <style name="LabelTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
